FROM python:3-alpine

ENV DATA_FOLDER /dataSuppressor

RUN apk --no-cache add py3-pip git

# Copy app scripts
COPY ./dataManager/requirements.txt $EOLEGET_FOLDER/
COPY ./dataManager/purgeData.py  $EOLEGET_FOLDER/
COPY ./dataManager/.env  $EOLEGET_FOLDER/

RUN pip3 install -r $EOLEGET_FOLDER/requirements.txt

# Copy cron scripts in root folder and update permissions
COPY ./cron.sh /cron.sh
RUN chmod 755 /cron.sh

# run crond as main process of container
CMD ["/cron.sh"]